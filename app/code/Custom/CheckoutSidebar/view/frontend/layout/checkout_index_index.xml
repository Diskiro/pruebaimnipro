<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="checkout.sidebar.additional">
            <block
                class="Magento\Framework\View\Element\Template"
                name="custom.checkout.sidebar.custom_text"
                template="Custom_CheckoutSidebar::custom-text.phtml"
                before="-"
            >
                <arguments>
                    <argument name="jsLayout" xsi:type="array">
                        <item name="components" xsi:type="array">
                            <item name="custom-text" xsi:type="array">
                                <item name="component" xsi:type="string">Custom_CheckoutSidebar/js/view/custom-text</item>
                                <item name="displayArea" xsi:type="string">custom-text</item>
                            </item>
                        </item>
                    </argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page> 